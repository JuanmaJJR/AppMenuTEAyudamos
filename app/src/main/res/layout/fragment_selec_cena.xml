<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juanjusue.appmenuteayudamos.Fragments.SelecCenaFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtvcena"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="CENA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButtonCen1"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/crema_de_verduras" />

                    <ImageButton
                        android:id="@+id/imageButtonCen2"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/sopa_pasta" />

                    <ImageButton
                        android:id="@+id/imageButtonCen3"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/panache_verduras" />

                    <ImageButton
                        android:id="@+id/imageButtonCen4"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/arroz_tomate" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/checkBoxCen1"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:duplicateParentState="false"
                        android:text="crema de verduras"
                        tools:text="crema de verduras" />

                    <CheckBox
                        android:id="@+id/checkBoxCen2"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="sopa de pasta"
                        tools:text="sopa de pasta" />

                    <CheckBox
                        android:id="@+id/checkBoxCen3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="panaché de verduras"
                        tools:text="panaché de verduras" />

                    <CheckBox
                        android:id="@+id/checkBoxCen4"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="arroz con tomate"
                        tools:text="arroz con tomate" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButtonCen5"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/pescado_adobado" />

                    <ImageButton
                        android:id="@+id/imageButtonCen6"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/tortilla_francesa" />

                    <ImageButton
                        android:id="@+id/imageButtonCen7"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/tortilla_calabacin" />

                    <ImageButton
                        android:id="@+id/imageButtonCen8"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/jamon_york_queso" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBoxCen5"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:duplicateParentState="false"
                        android:text="pescado marinera"
                        tools:text="pescado marinera" />

                    <CheckBox
                        android:id="@+id/checkBoxCen6"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:duplicateParentState="false"
                        android:text="tortilla francesa"
                        tools:text="tortilla francesa" />

                    <CheckBox
                        android:id="@+id/checkBoxCen7"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="tortilla de calabacin"
                        tools:text="tortilla de calabacin" />

                    <CheckBox
                        android:id="@+id/checkBoxCen8"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="jamon york y queso"
                        tools:text="jamon york y queso" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButtonCen9"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/fruta" />

                    <ImageButton
                        android:id="@+id/imageButtonCen10"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/yogur" />

                    <ImageButton
                        android:id="@+id/imageButtonCen11"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/helado" />

                    <ImageButton
                        android:id="@+id/imageButtonCen12"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@drawable/flan" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBoxCen9"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:duplicateParentState="false"
                        android:text="fruta"
                        tools:text="fruta" />

                    <CheckBox
                        android:id="@+id/checkBoxCen10"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:duplicateParentState="false"
                        android:text="yogurt"
                        tools:text="yogurt" />

                    <CheckBox
                        android:id="@+id/checkBoxCen11"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:duplicateParentState="false"
                        android:text="helado"
                        tools:text="helado" />

                    <CheckBox
                        android:id="@+id/checkBoxCen12"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="flan"
                        tools:text="flan" />
                </LinearLayout>
                <Button
                    android:id="@+id/btnFinalizarCen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Finalizar" />

            </LinearLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
