<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juanjusue.appmenuteayudamos.Fragments.SelecMeriendaFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtvDesayuno3"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="MERIENDA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButtonMer1"
                        android:layout_width="100dp"
                        android:layout_height="300dp"
                        android:layout_weight="1"
                        android:background="@drawable/leche_con_cacao" />

                    <ImageButton
                        android:id="@+id/imageButtonMer2"
                        android:layout_width="100dp"
                        android:layout_height="300dp"
                        android:layout_weight="1"
                        android:background="@drawable/yogur" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center">


                    <CheckBox
                        android:id="@+id/checkBoxMer1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:duplicateParentState="false"
                        android:text="Leche con colacao"
                        tools:text="Leche con colacao" />

                    <CheckBox
                        android:id="@+id/checkBoxMer2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Yogurt"
                        tools:text="Yogurt" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageButtonMer3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:background="@drawable/zumo_individual" />

                    <ImageButton
                        android:id="@+id/imageButtonMer4"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:background="@drawable/galletas" />

                    <ImageButton
                        android:id="@+id/imageButtonMer5"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:background="@drawable/fruta" />

                    <ImageButton
                        android:id="@+id/imageButtonMer6"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:background="@drawable/compota" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkBoxMer3"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:duplicateParentState="false"
                        android:text="Zumo"
                        tools:text="Zumo" />

                    <CheckBox
                        android:id="@+id/checkBoxMer4"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:duplicateParentState="false"
                        android:text="Galletas"
                        tools:text="Galletas" />

                    <CheckBox
                        android:id="@+id/checkBoxMer5"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fruta"
                        tools:text="Fruta" />

                    <CheckBox
                        android:id="@+id/checkBoxMer6"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Compota"
                        tools:text="Compota" />
                </LinearLayout>
                <Button
                    android:id="@+id/btnFinalizarMer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Finalizar"
                    android:onClick="compMer"
                    />

            </LinearLayout>
        </ScrollView>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
